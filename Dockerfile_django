FROM python:3.8

RUN apt-get update && apt-get install -y --no-install-recommends \
      gettext \
   && rm -rf /var/lib/apt/lists/*

COPY requirements.txt /tmp/requirements.txt
RUN pip install --no-cache-dir -r /tmp/requirements.txt

RUN groupadd -r runner && useradd --no-log-init -r -g runner runner

# Must match settings.EXPORTER_DIR default value
RUN mkdir -p /data/exporter_dumps && chown -R runner:runner /data/exporter_dumps
# Must match settings.SCRAPY_FILES_STORE default value
RUN mkdir -p /data/scrapy && chown -R runner:runner /data/scrapy

WORKDIR /workdir
USER runner:runner
COPY --chown=runner:runner . .

ENV DJANGO_ENV=production
RUN VERSION=$(date +%Y%m%d%h%s); sed -i "s/STATIC_VERSION =.*/STATIC_VERSION = '$VERSION'/g" ./core/settings.py

RUN python manage.py compilemessages

EXPOSE 8000
CMD exec gunicorn --bind 0.0.0.0:8000 core.wsgi --timeout 720 -c gunicorn_docker.py
