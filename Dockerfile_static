FROM node:16 as build-stage-webpack
WORKDIR /workdir
COPY package*.json ./
RUN npm install
COPY src ./src
RUN npm run build

FROM python:3.8 as build-stage-django

COPY requirements.txt /tmp/requirements.txt
RUN pip install --no-cache-dir -r /tmp/requirements.txt

WORKDIR /workdir
COPY . .

ENV DJANGO_ENV=production

RUN python manage.py collectstatic --noinput

FROM nginxinc/nginx-unprivileged:latest as production-stage
USER root
# Destination of `npm run build` above is set by webpack.config.js.
COPY --chown=nginx:root --from=build-stage-webpack /workdir/dist /usr/share/nginx/html/static
# Destination of `manage.py collectstatic` above is set by STATIC_ROOT in core/settings.py.
COPY --from=build-stage-django --chown=nginx:root /workdir/static /usr/share/nginx/html/static
USER nginx
