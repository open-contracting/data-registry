FROM node:16 as build-stage-vue

# For the static files to be generated in workdir/static
WORKDIR /workdir/data_registry/vue

COPY data_registry/vue/package*.json ./
RUN npm install

COPY data_registry/vue ./
RUN npm run build

FROM python:3.8 as build-stage-django

COPY requirements.txt /tmp/requirements.txt
RUN pip install --no-cache-dir -r /tmp/requirements.txt

WORKDIR /workdir
COPY . .

ENV DJANGO_ENV=production

RUN python manage.py collectstatic --noinput

FROM nginxinc/nginx-unprivileged:latest as production-stage
USER root
COPY --from=build-stage-vue --chown=nginx:root /workdir/static /usr/share/nginx/html/static
COPY --from=build-stage-django --chown=nginx:root /workdir/static /usr/share/nginx/html/static
USER nginx
